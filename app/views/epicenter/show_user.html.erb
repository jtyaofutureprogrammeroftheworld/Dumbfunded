<h1>@<%= @user.username %>'s Dare Domain</h1>


<div id="name">
<p><%= @user.name %> </p>
</div>
<div id="bio">
<p><%= @user.bio %></p>
</div>
<p>
	<% if current_user.following.include?(@user.id) %>
		<%= link_to "Following", unfollow_path(id: @user.id), id: 'unfollow_btn', class: "btn btn-primary" %>
	<% else %>
		<% if current_user.id != @user.id %>
			<%= link_to "Follow", now_following_path(id: @user.id), class: "btn btn-primary" %>
			<% end %>
		<% end %>
</p>




<% @user.dares.each do |dare| %>
	<div>
		<div class="well">
		<p>@<%= @user.username %></p>
		<p><%= dare.message %></p>
	</div>

	</div>

	<% end %>
</div>