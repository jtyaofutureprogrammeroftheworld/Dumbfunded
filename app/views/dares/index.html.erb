<p id="notice"><%= notice %></p>

<h1 class="text-center">Dares</h1>


<div class="container" class="text-center">
<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @dares.each do |dare| %>

      <tr>
        
        <td><%= dare.message %></td>
        <td><%= dare.user_id %></td>
        <td><%= link_to 'Show', dare %></td>
        <td><%= link_to 'Edit', edit_dare_path(dare) %></td>
              <td><%= link_to dare.user.username, show_user_path(id: dare.user.id) %> </td>
        <td><%= link_to 'Destroy', dare, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>
</div>

<br>

